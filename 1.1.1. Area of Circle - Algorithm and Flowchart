# write your code here
def calculate_circle_area(radius):
	pi = 3.14
	area = pi * radius**2
	return area

radius = float(input("Enter the radius : "))
if 0.0 <= radius <= 100.0:
	area = calculate_circle_area(radius)
	print("Area of circle = {:.6f}".format(area))
else:
	print("Enter a positive value upto 100")
