def factorial(n):
     if n == 0 or n == 1:
        return 1
     else:
        return n * factorial(n - 1)

# Taking user input
num = int(input("Enter a number : "))

# Checking if the number is negative
if num < 0:
    print("Enter a positive number")
else:
    print(f"Factorial of given number is : {factorial(num)}")

